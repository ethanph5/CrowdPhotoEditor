<script type="text/javascript">
$(document).ready(function(){
  $(".resultList #pic_accept").click(function(){
  
    $(this).parents(".resultList").hide("slow");
        
  });
});
  
  
$(document).ready(function(){
  $(".resultList #pic_reject").click(function(){
  
    $(this).parents(".resultList").hide("slow");
    
    });   
});


</script>

